{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VisibilityResult",
  "type": "object",
  "required": [
    "story_id",
    "selling_points",
    "scores",
    "summary"
  ],
  "properties": {
    "story_id": {
      "type": "string",
      "description": "Unique identifier for the narrative or campaign."
    },
    "selling_points": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["pillar", "summary", "questions"],
        "properties": {
          "pillar": {"type": "string"},
          "summary": {"type": "string"},
          "questions": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "prompt", "category", "responses"],
              "properties": {
                "id": {"type": "string"},
                "prompt": {"type": "string"},
                "category": {"type": "string"},
                "kind": {"type": "string"},
                "assumptions": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "responses": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["model", "answer", "ai_provider_inferred"],
                    "properties": {
                      "model": {"type": "string"},
                      "answer": {"type": "string"},
                      "ai_provider_inferred": {"type": "boolean"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "scores": {
      "type": "object",
      "properties": {
        "coverage": {"type": "number"},
        "confidence": {"type": "number"}
      },
      "additionalProperties": false
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_questions": {"type": "integer"},
        "ai_provider_recognized_in": {"type": "integer"}
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "generated_at": {"type": "string", "format": "date-time"},
        "models_run": {
          "type": "array",
          "items": {"type": "string"}
        },
        "source_url": {"type": "string", "format": "uri"},
        "client_name": {"type": "string"},
        "provider_name": {"type": "string"}
      }
    }
  }
}
